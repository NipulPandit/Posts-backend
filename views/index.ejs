<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Website</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        main {
            flex: 1;
        }
        
        /* Autofill styles for input fields */
        input:-webkit-autofill {
            -webkit-box-shadow: 0 0 0 30px #374151 inset;
            box-shadow: 0 0 0 30px #374151 inset; 
            transition: background-color 5000s ease-in-out 0s;
        }

        input:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0 30px #374151 inset; 
            box-shadow: 0 0 0 30px #374151 inset; 
        }

        
       
    </style>
</head>
<body class="bg-gray-900 text-gray-100">
        <div id="flashMessage" class=" fixed w-full max-w-sm mx-auto p-2 rounded-lg shadow-lg text-center bg-indigo-500 transition-transform transition-opacity duration-500 ease-in-out transform translate-y-[-50px] opacity-0 animate-enter z-10" style="top: 20px; left: 50%; transform: translateX(-50%);">
            <p id="flashText">code is here</p>
        </div>  

    <header class="flex justify-between items-center p-4 bg-gray-800">
        <button class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-1 rounded ml-4" onclick="openPostForm()">
            New Post
        </button>
        
        <!-- <h1 class="text-xl font-bold text-teal-300">Post Website </h1> -->
        <div class="flex items-center">
            <input type="text" placeholder="Search users..." class="px-4 py-2 rounded bg-gray-700 text-white outline-none" />
            <img src="https://via.placeholder.com/40" alt="User Image" class="rounded-full ml-4 cursor-pointer" title="View Profile">
        </div>
    </header>

    <main class="p-4 flex">
        <div class="w-full">
            <div class="grid grid-cols-1 gap-4 " id="post_content">
               <!-- dynamic html insertion -->
            </div>
        </div>

        <!-- User Profile Section removed from here -->
    </main>

    <!-- post form -->

    <div id="postForm" class="absolute inset-0 flex justify-center items-center bg-gray-900 bg-opacity-75 hidden">
        <div class="bg-gray-800 p-6 rounded-lg shadow-lg w-full max-w-md relative">
            <button class="absolute top-3 right-5 text-white hover:text-gray-300" onclick="closePostForm()">
                <i class="fas fa-times text-xl"></i>
            </button>
            <h2 class="text-xl font-bold text-center mb-4">Create New Post</h2>
            <form action="/createPost" method="POST" id="post_form">
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-semibold" for="postTitle">Title*</label>
                    <input class="w-full p-2 bg-gray-700 rounded-lg text-white focus:outline-none" type="text" id="postTitle" name="title" placeholder="Enter post title" >
                </div>
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-semibold" for="postContent">Content*</label>
                    <textarea class="w-full p-2 bg-gray-700 rounded-lg text-white focus:outline-none" id="postContent" name="content" rows="4" placeholder="Enter post content"></textarea>
                </div>
                <button class="w-full bg-indigo-500 hover:bg-indigo-600 text-white py-2 rounded-lg font-semibold" type="submit">Create</button>
            </form>
        </div>
    </div>
    <!-- post form end-->

    <footer class="p-4 bg-gray-800 text-center">
        <p>&copy; 2024 Post Website. All rights reserved.</p>
    </footer>


   
    <script>

        function toggleCommentSection(button) {
            const commentSection = button.closest('.bg-gray-800').querySelector('.comment-section');
            commentSection.classList.toggle('hidden');
        }

    
      
    </script>
    
    <script src="script.js"></script>
</body>
</html>
